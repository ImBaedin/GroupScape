{
  "name": "GroupScape",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "convex": "^1.29.3",
      "better-auth": "1.3.34",
      "@convex-dev/better-auth": "^0.9.7"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "dev:server": "bun run --filter @GroupScape/backend dev",
    "dev:setup": "bun run --filter @GroupScape/backend dev:setup"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "^2.2.0"
  },
  "packageManager": "bun@1.3.3"
