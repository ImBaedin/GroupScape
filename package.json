{
	"name": "GroupScape",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"convex": "^1.29.3",
			"better-auth": "1.3.34",
			"@convex-dev/better-auth": "^0.9.7"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"dev": "bun run --filter '*' dev",
		"build": "bun run --filter '*' build",
		"build:web": "bun run --filter web build",
		"check-types": "bun run --filter '*' check-types",
		"test": "vitest run --config vitest.workspace.ts",
		"test:unit": "bun run --filter @GroupScape/runelite-party-client test:unit && bun run --filter @GroupScape/osrs-content test:unit && bun run --filter web test:unit",
		"test:integration": "bun run --filter @GroupScape/backend test:integration && bun run --filter web test:integration",
		"test:web": "vitest run --config vitest.workspace.ts --project web",
		"test:backend": "vitest run --config vitest.workspace.ts --project backend",
		"test:runelite": "vitest run --config vitest.workspace.ts --project runelite-party-client",
		"test:osrs-content": "vitest run --config vitest.workspace.ts --project osrs-content",
		"dev:native": "bun run --filter native dev",
		"dev:web": "bun run --filter web dev",
		"dev:server": "bun run --filter @GroupScape/backend dev",
		"dev:setup": "bun run --filter @GroupScape/backend dev:setup"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@testing-library/user-event": "^14.6.1",
		"@vitest/coverage-v8": "^4.0.18",
		"convex-test": "^0.0.41",
		"jsdom": "^28.0.0",
		"vitest": "^4.0.18"
	},
	"packageManager": "bun@1.3.3"
}
